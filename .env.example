# ===========================================
# UAIE - Universal Autonomous Insight Engine
# Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# Application
APP_NAME="UAIE - Universal Autonomous Insight Engine"
APP_VERSION=0.1.0
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173,http://frontend:80

# Database (optional — file-based storage is used by default)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/uaie
DATABASE_POOL_SIZE=20

# Redis (optional — not required for core functionality)
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-super-secret-key-change-in-production
# ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Services
# Get your key at https://console.anthropic.com/
# Without this key, the system uses rule-based analysis only (still fully functional)
ANTHROPIC_API_KEY=
# OPENAI_API_KEY=

# Ingestion — File Size Limits
MAX_FILE_SIZE_MB=5000
MAX_ARCHIVE_SIZE_MB=5000
MAX_EXTRACTED_SIZE_GB=50
MAX_FILES_PER_ARCHIVE=10000

# Ingestion — Chunking for Large Files
# CHUNK_SIZE_RECORDS=100000
# CHUNK_SIZE_BYTES=104857600
# STREAM_BUFFER_SIZE=8388608

# Storage Thresholds (use PostgreSQL above these limits)
# DATA_DIR=/app/data
# USE_DB_THRESHOLD_RECORDS=50000
# USE_DB_THRESHOLD_MB=100

# Anomaly Detection
ANOMALY_THRESHOLD=0.95
DETECTION_WINDOW_HOURS=24

# ML Models (path to pre-trained model files; defaults to backend/models/)
# MODELS_DIR=/app/models
